<% # if notes.any? %>
  <ul class="list-unstyled mt-2">
    <% # notes.each do |note| %>
      <li class="d-flex">
        <img class="rounded me-2 mb-5" src="<%= gravatar_url(note.user, { size: 64 }) %>" alt="">
        <div>
          <div>
            <%= link_to note.user.name, user_path(note.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= note.created_at %></span>
          </div>
          <div>
            <p><%= note.content %></p>
          </div>
        </div>
      </li>
    <% # end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% # end %>
