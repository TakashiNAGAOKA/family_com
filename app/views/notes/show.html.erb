<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">サブジェクト
        <%= @note.subject.name %></h3>
      </div>

      <div class="card-header">
        <h3 class="card-title">ユーザ<%= @note.user.name %></h3>
      </div>

      <div class="card-header">
        <h3 class="card-title">ステイタス<%= @note.status %></h3>
      </div>
      <div class="card-header">
        <h3 class="card-title">ノート<%= @note.note %></h3>
      </div>

    </div>
  </aside>
</div>

<ul>
  <% @comments.each do |comment| %>
    <li><%= comment.comment %>&gt;:<%= comment.created_at %>:by::<%= comment.user.name %></li>
  <% end %>
</ul>
<%== pagy_nav(@pagy) %>

  <div class="row">
    <aside class="col-sm-4">
      <%#= form_with model: @comment,url: user_note_comments_path do |f| %>
      <%= form_with model: @comment do |f| %>
        <div class="mb-3">
          <%= f.text_area :comment, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'コメントを追加する', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
  </div>  
